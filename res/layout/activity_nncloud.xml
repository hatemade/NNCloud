<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="70dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="START" />

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="STOP" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/StateButton2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ServiceButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/stir_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:src="@drawable/stair" />

        <ImageView
            android:id="@+id/elev_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="60dip"
            android:layout_weight="1"
            android:src="@drawable/ele" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/StateButton1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/StateButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="10dip" >
    </LinearLayout>

    <FrameLayout
        android:id="@+id/LogSurface"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:layout_above="@+id/StateButton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

    </FrameLayout>

    <LinearLayout
        android:id="@+id/AppBar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black" >

        <LinearLayout
            android:id="@+id/StartServiceButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_start_background" >

            <ImageView
                android:id="@+id/StartServiceIcon"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="-5dp"
                android:src="@drawable/ic_start" />

            <TextView
                android:id="@+id/StartServiceText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:gravity="left|center_vertical"
                android:text="@string/start_service"
                android:textColor="@android:color/primary_text_dark_nodisable"
                android:textSize="35dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
